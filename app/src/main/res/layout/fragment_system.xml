<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_margin="20dp"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:weightSum="60">

    <com.missouriwindandsolar.uicomponents.SolarGauge
        android:id="@+id/Power"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        app:register="Power"
        app:scaleEndValue="10"
        app:scaleStartValue="0"
        app:showInnerRim="false"
        app:gaugeTitle="@string/PowerTitle"
        app:readingUnit="W"
        app:readingPrecision="0"
        app:biDirectional="false"
        app:autoScale="true"
        app:showReading="true" />

    <com.missouriwindandsolar.uicomponents.SolarGauge

        android:id="@+id/Load"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        app:register="BatCurrent"
        app:scaleEndValue="10"
        app:scaleStartValue="0"
        app:showInnerRim="false"
        app:gaugeTitle="@string/LoadTitle"
        app:readingUnit="W"
        app:readingPrecision="0"
        app:biDirectional="false"
        app:autoScale="true"
        app:showReading="true" />

</LinearLayout>