<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.missouriwindandsolar.classic"
    android:versionCode="100"
    android:versionName="1.0.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <!--for debug, save logs & settings to external-->
    <!--<uses-permission android:name="android.permission.READ_PHONE_STATE" />-->

    <application
        android:name="com.missouriwindandsolar.classic.MonitorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.missouriwindandsolar.classic.MonitorActivity"
            android:label="@string/app_name" >
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name="com.missouriwindandsolar.classic.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.missouriwindandsolar.classic.Settings"
            android:label="@string/SettingsLabel"
            android:parentActivityName="com.missouriwindandsolar.classic.MonitorActivity" />

        <service
            android:name="com.missouriwindandsolar.classic.ModbusService"
            android:exported="false" />
        <service
            android:name="com.missouriwindandsolar.classic.UDPListener"
            android:exported="false" />
        <service
            android:name="com.missouriwindandsolar.classic.PVOutputService"
            android:exported="false" >
        </service>
    </application>

</manifest>
